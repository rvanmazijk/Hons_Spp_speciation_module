keywords = {Cytochrome b,Didelphidae,Didelphimorphia,South America,Thylamys phylogeny},
number = {4},
pages = {419--425},
title = {{Phylogeny of Thylamys (Didelphimorphia, Didelphidae) species, with special reference to Thylamys karimii}},
url = {http://www.scielo.br/pdf/isz/v99n4/v99n4a12.pdf},
volume = {99},
year = {2009}
